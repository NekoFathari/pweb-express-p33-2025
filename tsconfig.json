{
  "compilerOptions": {
    /* ===== OUTPUT ===== */
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",

    /* ===== COMPATIBILITY ===== */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    /* ===== STRICTNESS ===== */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* ===== NODE ===== */
    "types": ["node"]
  },
  "include": ["src"]
}
